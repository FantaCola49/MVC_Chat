@model IEnumerable<MVC_Chat.Models.Picture>
@{
    ViewBag.Title = "Page Not Found";
    Response.StatusCode = 404;
}
<h2 style="color:#ff6c04; text-align:center">Ошибочка!</h2>

<div style="text-align:center">
    @foreach (var item in Model)
    {
        if (item.Id == 2)
        {
            @Html.Raw("<img " +
           "style = 'width:536px; height:512px; text-align:right;' " +
           "src=\"data:image/jpeg;base64,"
           + Convert.ToBase64String(item.Image) + "\" />")
        }
    }
</div>

<h2 style="color:#ff6c04;text-align:center">Нет такой страницы</h2>