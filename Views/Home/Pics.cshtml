@model IEnumerable<MVC_Chat.Models.Picture>
@{
    ViewBag.Title = "Pics";
}
<h2>My Pics</h2>

<p>
    @Html.ActionLink("Добавить изображение","Create")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
           @Html.Raw("<img style = 'width:612px; height:500px;' src=\"data:image/jpeg;base64,"
           + Convert.ToBase64String(item.Image) + "\" />")
        </td>
    </tr>
}

</table>
